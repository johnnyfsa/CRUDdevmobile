<!DOCTYPE html>
<html lang="en">
    <head>
        <!-- Required meta tags-->
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="Colorlib Templates">
        <meta name="author" content="Colorlib">
        <meta name="keywords" content="Colorlib Templates">
    
    
        <!-- Main CSS-->
        <link href="css/main.css" rel="stylesheet" media="all">
        <link href="css/bs.css" rel="stylesheet">

        <!-- Icons font CSS-->
        <link href="vendor/mdi-font/css/material-design-iconic-font.min.css" rel="stylesheet" media="all">
        <link href="vendor/font-awesome-4.7/css/font-awesome.min.css" rel="stylesheet" media="all">
        <!-- Font special for pages-->
        <link href="https://fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    
        <!-- Vendor CSS-->
        <link href="vendor/select2/select2.min.css" rel="stylesheet" media="all">
        <link href="vendor/datepicker/daterangepicker.css" rel="stylesheet" media="all">
        <style>
            li {
            display: inline;
          }
        </style>
        
        <nav class="navbar navbar-light bg-light">
            <ul>
                <li class="nav-item"><a class="navlink" href="/">Home</a></li>
                <li class="nav-item" ><a class="navlink" href="/show">Show</a></li>
              </ul>
        </nav>
        
    </head>
<body>
    <div class="page-wrapper bg-gra-02 p-t-130 p-b-100 font-poppins">
        <div class="wrapper ">
            <div class="card card-12">
                <div class="card-body">
                    <h2 class="Title">Listagem</h2>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">Nome </th>
                <th scope="col">Sobrenome </th>
                <th scope="col">Aniversário </th>
                <th scope="col">Gênero </th>
                <th scope="col">Email </th>
                <th scope="col">Telefone </th>
                <th scope="col">Cidade </th>
                <th scope="col">Apelido </th>
            </tr>
        </thead>
        <tbody>
            <% data.forEach(function(details) { %>
                <tr>
                    <td> <%= details.nome %> </td>
                    <td> <%= details.sobrenome %> </td>
                    <td> <%= details.birthday %> </td>
                    <td> <%= details.gender %> </td>
                    <td> <%= details.email %> </td>
                    <td> <%= details.phone %> </td>
                    <td> <%= details.city %> </td>
                    <td> <%= details.nick %> </td>
                    <td><a href="/edit/<%= details._id %>">Editar</a></td>
                    <td><a href="/delete/<%= details._id %>">Excluir</a></td>
                </tr>
            <% }) %>
        </tbody>
        <button class="btn btn--radius-2 btn--blue"><a href="/">Voltar</a></button>
    </table>
                </div>
            </div>
        </div>
    </div>
    
</body>
</html>